{
  "name": "backend",
  "version": "0.1.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "npx prisma studio --browser none & nodemon -r dotenv/config src/index.ts",
    "build": "tsc",
    "start": "ts-node -r dotenv/config src/index.ts",
    "test": "prisma db seed && jest -i --forceExit",
    "setup": "prisma generate && prisma db seed && npm run swagger",
    "setup:ci": "prisma generate && prisma migrate deploy && prisma db seed && npm run swagger",
    "swagger": "ts-node -r dotenv/config src/utils/swagger.ts",
    "format": "prettier --write ."
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.2.1",
    "firebase-admin": "^13.6.0",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.1",
    "ws": "^8.19.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.13",
    "@types/node": "^25.0.9",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.0",
    "prettier-plugin-jsdoc": "^1.8.0",
    "prisma": "^5.20.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@4.2.2"
}
